<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InicioActivity">


    <FrameLayout
        android:id="@+id/layout_imageView"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/gradient_image" />

    </FrameLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="363dp"
        android:layout_height="73dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="31dp"
        android:text="PopayánDescubre: \nTu Aventura, Tu Guía"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_imageView" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView">

        <View
            android:layout_width="267dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@drawable/corner2" />

        <Button
            android:id="@+id/button_Login"
            android:layout_width="326dp"
            android:layout_height="70dp"
            android:layout_gravity="top|center"
            android:layout_marginTop="114dp"
            android:backgroundTint="@color/fourd"
            android:drawableLeft="@drawable/gmail"
            android:text="Iniciar Sesión"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnFacebook"
            android:layout_width="326dp"
            android:layout_height="70dp"
            android:layout_gravity="top|center"
            android:layout_marginTop="206dp"
            android:backgroundTint="@color/fourd"
            android:drawableLeft="@drawable/facebook"
            android:text="Ingresa con Facebook"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnGoogle"
            android:layout_width="326dp"
            android:layout_height="70dp"
            android:layout_gravity="top|center"
            android:layout_marginTop="298dp"
            android:backgroundTint="@color/fourd"
            android:drawableLeft="@drawable/google"
            android:drawablePadding="10dp"
            android:text="Ingresa con Google"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/btnCreCuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="15dp"
            android:text="Crear Cuenta"
            android:textColor="@color/first"
            android:textSize="25sp"
            android:textStyle="bold" />

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>