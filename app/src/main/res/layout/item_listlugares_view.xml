<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="60dp"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/ivImage1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="top"
                android:background="@drawable/reunded_images"
                android:clipToOutline="true"
                android:contentDescription="@null"
                android:src="@drawable/parque" />

            <TextView
                android:id="@+id/tvName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="12sp"
                tools:text="Parque Caldas"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="60dp"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/ivImage2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="top"
                android:background="@drawable/reunded_images"
                android:clipToOutline="true"
                android:contentDescription="@null"
                android:src="@drawable/puente" />

            <TextView
                android:id="@+id/tvName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="12sp"
                tools:text="Puente Humilladero" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/ivImage3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="top"
                android:background="@drawable/reunded_images"
                android:clipToOutline="true"
                android:contentDescription="@null"
                android:src="@drawable/pueblito" />

            <TextView
                android:id="@+id/tvName3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="12sp"
                tools:text="Pueblito Patojo"
                android:textAlignment="center"/>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>