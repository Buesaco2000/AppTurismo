<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.OpcionesMenu.LugaresMenuActivity">

    <FrameLayout
        android:id="@+id/layout_imageView"
        android:layout_width="match_parent"
        android:layout_height="316dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="306dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/gradient_image" />

        <ImageButton
            android:id="@+id/btnAtras"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/transparent"
            android:background="@drawable/corner_3"
            android:src="@drawable/arrow_back" />

        <View
            android:id="@+id/linea"
            android:layout_width="372dp"
            android:layout_height="2dp"
            android:layout_gravity="center|bottom"
            android:background="@drawable/linea" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_imageView">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="29dp"
            android:layout_marginTop="20dp"
            android:text="Lugares"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:textStyle="bold" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp">

            <ProgressBar
                android:id="@+id/progressBarEventos"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/recyclerListView"
                app:layout_constraintEnd_toEndOf="@+id/recyclerListView"
                app:layout_constraintStart_toStartOf="@+id/recyclerListView"
                app:layout_constraintTop_toTopOf="@+id/recyclerListView" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginEnd="27dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </androidx.recyclerview.widget.RecyclerView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginBottom="60dp"
        android:backgroundTint="@color/first"
        android:drawableLeft="@drawable/mapa"
        android:text="Abrir Mapa"
        android:textColor="@color/black"
        android:elevation="12dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="#EDE9E9"
        android:elevation="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:id="@+id/linea2"
            android:layout_width="187dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="@drawable/linea" />

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>